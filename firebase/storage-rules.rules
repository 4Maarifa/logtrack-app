rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  	match /{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && userId == request.auth.uid && (request.resource == null || request.resource.size < 5 * 1024 * 1024);
    }
    match /equipmentModels/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource != null && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
